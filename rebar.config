{app,                [eaws]}.
{erl_opts,           [debug_info]}.
{eunit_compile_opts, [{src_dirs, ["test"]}]}.
{cover_enabled,      true}.
{clean_files,        ["ebin/*.beam", "log/*", "rel/*"]}.
{target,             "rel"}.
{deps_dir,           ["deps"]}.
{deps, []}.

{deps, [
    {lager, ".*",
        {git, "https://github.com/basho/lager.git", {tag, "3.0.2"}}
    }
]}.

{erl_opts, [
    {parse_transform, lager_transform}
]}.
